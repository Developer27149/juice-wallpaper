{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "experimentalDecorators": true,
    "paths": {
      "@app/*": ["src/*"],
      "@prisma/*": ["prisma/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "src/**/*.ts",
    "prisma/prisma.module.ts",
    "prisma/prisma.service.ts"
  ]
}
